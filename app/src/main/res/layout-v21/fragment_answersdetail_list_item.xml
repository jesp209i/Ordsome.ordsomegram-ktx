<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/itemGridLayout"
              android:layout_marginBottom="5dp" android:layout_marginTop="5dp">
    <TextView
            android:id="@+id/answer_translated_text"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_translated_text"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:clickable="false"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
    />
    <Button
            android:id="@+id/answer_up_vote"
            android:text="@string/answer_up_vote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DAF7A6"
            android:layout_row="1"
            android:layout_column="0"

    />
    <Button
            android:id="@+id/answer_down_vote"
            android:text="@string/answer_down_vote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F17E66"
            android:layout_row="1"
            android:layout_column="1"
            />
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_row="2" android:layout_column="0"
            android:layout_columnSpan="2"
    />
</GridLayout>
