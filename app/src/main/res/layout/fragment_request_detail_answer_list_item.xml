<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/itemGridLayout" android:background="@drawable/border"
              android:layout_marginBottom="5dp" android:layout_marginTop="5dp">
    <TextView
            android:id="@+id/answer_translated_text"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_translated_text"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:clickable="false"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_row="0"
            android:layout_column="1"

    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/preferredAnswerView"
            android:layout_column="0" android:layout_row="0"/>
</GridLayout>
