<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RequestFragment"
        android:id="@+id/frameLayout"
        android:padding="20dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="@string/request_fragment_headline"
            android:id="@+id/textView"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="359dp"
            android:layout_height="360dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/request_source_text"
            app:layout_constraintTop_toTopOf="@id/textView"
            android:layout_marginTop="10dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="252dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:importantForAutofill="no"/>
    <Button
            android:id="@+id/request_button"
            android:text="@string/request_fragment_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>