<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/request_dest">

    <fragment android:id="@+id/request_dest" android:name="dk.enmango.ordsomegram.ui.RequestFragment"
              android:label="fragment_request" tools:layout="@layout/fragment_new_request"/>
    <fragment android:id="@+id/request_list_dest" android:name="dk.enmango.ordsomegram.ui.MyRequestsFragment"
              android:label="fragment_request_list" tools:layout="@layout/fragment_my_requests">
        <action android:id="@+id/action_to_params" app:destination="@+id/answered_request_dest"/>
    </fragment>
    <fragment android:id="@+id/answered_request_dest" android:name="dk.enmango.ordsomegram.ui.MyRequestDetail"
              android:label="fragment_answered_request" tools:layout="@layout/fragment_my_request_detail">
        <argument android:name="requestId" app:argType="integer"/>

    </fragment>
    <fragment android:id="@+id/requestAnswer_dest" android:name="dk.enmango.ordsomegram.ui.CreateAnswerFragment"
              android:label="fragment_request_answer" tools:layout="@layout/fragment_create_answer">
        <argument android:name="requestId" app:argType="integer"/>
    </fragment>
    <fragment android:id="@+id/answers_dest" android:name="dk.enmango.ordsomegram.ui.AnswersFragment"
              android:label="fragment_answers_list" tools:layout="@layout/fragment_request_detail_answer_list">
        <action android:id="@+id/action_to_req_answer" app:destination="@id/requestAnswer_dest"/>
    </fragment>
</navigation>